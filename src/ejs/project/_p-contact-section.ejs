<div class="p-contact-section">
  <div class="p-contact-section__inner l-inner">
    <%- include('../component/_c-section-title', {
      title: 'Contact Us',
      subTitle: 'Get in touch'
    }) %>

    <div class="p-contact-section__content">
      <div class="p-contact-section__info">
        <h3 class="p-contact-section__info-title">Company Information</h3>
        <dl class="p-contact-section__info-list">
          <div class="p-contact-section__info-item">
            <dt>Company Name</dt>
            <dd>Template Inc.</dd>
          </div>
          <div class="p-contact-section__info-item">
            <dt>Address</dt>
            <dd>123 Main Street, Tokyo, Japan</dd>
          </div>
          <div class="p-contact-section__info-item">
            <dt>Phone</dt>
            <dd><a href="tel:+81-3-1234-5678">+81-3-1234-5678</a></dd>
          </div>
          <div class="p-contact-section__info-item">
            <dt>Email</dt>
            <dd><a href="mailto:info@example.com">info@example.com</a></dd>
          </div>
        </dl>
      </div>

      <div class="p-contact-section__map">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3240.8270716546293!2d139.76715!3d35.68123!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x60188bfbd89f700b%3A0x277c49ba34ed38!2sTokyo%20Station!5e0!3m2!1sen!2sjp!4v1234567890123!5m2!1sen!2sjp"
          width="100%"
          height="100%"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          title="Company Location Map"
        ></iframe>
      </div>
    </div>
  </div>
</div>
