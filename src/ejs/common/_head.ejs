<%# baseUrl, page %>

<head>
  <!-- ! noindex and nofollow -->
  <meta name="robots" content="noindex, nofollow" />

  <!-- meta（不変）情報 -->
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="format-detection" content="telephone=no" />

  <!-- meta情報 -->
  <title><%= page['title'] %></title>
  <meta name="description" content="<%= page['description'] %>" />
  <meta name="keywords" content="<%= page['keywords'] %>" />
  <%# memo
  keywords: SEOに影響ないため設定は任意
  %>

  <!-- OGP(Open Graph Protocol) -->
  <meta property="og:type" content="<%= page['ogType'] %>" />
  <meta property="og:title" content="<%= page['title'] %>" />
  <meta property="og:description" content="<%= page['description'] %>" />
  <meta property="og:url" content="<%= page['url'] %>" />
  <meta property="og:image" content="<%= baseUrl %>/assets/images/common/ogp.jpg" />
  <meta property="og:image:width" content="1200" />
  <meta property="og:image:height" content="630" />
  <meta property="og:locale" content="ja_JP" />
  <meta property="og:site_name" content="<%= page['title'] %>" />
  <%# memo: 
  og:type:
    website:トップページや会社情報ページ
    article:ブログ記事ページ 
    product:商品詳細ページ（eコマースサイトの場合）
    event:イベントページ 
  %>

  <!-- X OGP -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="<%= page['title'] %>" />
  <meta name="twitter:description" content="<%= page['description'] %>" />
  <meta name="twitter:image" content="<%= baseUrl %>/assets/images/common/ogp.jpg" />

  <!-- favicon -->
  <link rel="icon" href="<%= baseUrl %>/assets/images/common/favicon.png" />
  <!-- <link rel="apple-touch-icon" href="<%= baseUrl %>/images/apple-touch-icon.png" sizes="180*180" /> -->

  <!-- canonical -->
  <link rel="canonical" href="<%= page['url'] %>" />

  <!-- google font -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@100..900&display=swap" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Gotu&family=Lato:wght@400;700&family=Noto+Sans+JP:wght@400;500;700&display=swap" rel="stylesheet">

  <!-- css -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
  <link rel="stylesheet" href="<%= baseUrl %>/assets/css/ress.min.css" />
  <link rel="stylesheet" href="<%= baseUrl %>/assets/css/style.min.css" />

  <!-- JavaScript -->
  <script defer src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
  <script defer src="https://cdn.jsdelivr.net/npm/gsap@3.13.0/dist/gsap.min.js"></script>
  <script defer src="https://cdn.jsdelivr.net/npm/gsap@3.13.0/dist/ScrollTrigger.min.js"></script>
  <script defer src="https://cdn.jsdelivr.net/npm/gsap@3.13.0/dist/SplitText.min.js"></script>
  <script defer src="<%= baseUrl %>/assets/js/script.js"></script>
</head>