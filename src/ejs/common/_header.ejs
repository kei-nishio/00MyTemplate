<% const validPage = 'top'; %>
<% const isTopPage = page === validPage; %>
<%
  const navItems = [
    { link: "index.html", text: "HOME" },
    { link: "#", text: "PRODUCTS" },
    { link: "#", text: "ABOUT US" },
    { link: "#", text: "CONTACT" },
    { link: "#", text: "LOGIN" }
  ];
%>
<header class="p-header" data-header>
  <div class="p-header__inner">
    <% if (isTopPage) { %>
    <h1 class="p-header__logo"><% } else { %>
      <div class="p-header__logo"><% } %>
        <a href="index.html">
          <span class="p-header__company-name">YOUR COMPANY</span>
        </a>
        <% if (!isTopPage) { %>
      </div>
      <% } else { %>
    </h1>
    <% } %>
    <nav class="p-header__nav" aria-label="メインナビゲーション">
      <ul class="p-header__list">
        <% navItems.forEach(item => { %>
        <li class="p-header__item">
          <a href="<%= item.link %>" class="p-header__link">
            <span><%= item.text %></span>
          </a>
        </li>
        <% }) %>
      </ul>
    </nav>

    <%# hamburger %>
    <div class="p-header__hamburger">
      <button class="c-hamburger" type="button" aria-label="メニュー" aria-expanded="false" data-hamburger>
        <span class="c-hamburger__border"></span>
        <span class="c-hamburger__border"></span>
        <span class="c-hamburger__border"></span>
      </button>
    </div>
  </div>
</header>

<%# drawer %>
<%- include('../project/_p-drawer' ) %>